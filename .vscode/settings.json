{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/.flatpak-builder/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/dist/**": true,
    ".flatpak/**": true,
    "_build/**": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "charliermarsh.ruff"
}
